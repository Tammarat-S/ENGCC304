
#include <stdio.h>

int findMin(int arr[], int size) {
    int min = arr[0];
    for(int i = 1; i < size; i++) {
        if(arr[i] < min) {
            min = arr[i];
        }
    }
    return min;
}

int findMax(int arr[], int size) {
    int max = arr[0];
    for(int i = 1; i < size; i++) {
        if(arr[i] > max) {
            max = arr[i];
        }
    }
    return max;
}

int main() {
    int arr[100], i = 0; 
    char ch;
    
    printf("Enter value:\n");

    // รับค่าจากผู้ใช้จนกว่าจะเจอ newline
    while (scanf("%d%c", &arr[i], &ch)) {
        i++;
        if (ch == '\n') {
            break;
        }
    }

    // แสดง Index
    printf("Index: ");
    for (int j = 0; j < i; j++) {
        printf("%d ", j);
    }
    printf("\n");

    // แสดง Array
    printf("Array: ");
    for (int j = 0; j < i; j++) {
        printf("%d ", arr[j]);
    }
    printf("\n\n");

    // หาค่าต่ำสุดและค่าสูงสุด
    int min = findMin(arr, i);
    int max = findMax(arr, i);

    printf("Min : %d\n", min);
    printf("Max : %d\n", max);

    return 0;
}
