#include <stdio.h>

int main(){
    int num1 ,num2,num3, sum ; //ประกาศตัวแปรเก็บตัวเลขและผลรวม
    printf("Enter three numbers\n") ;
    scanf("%d %d %d",&num1,&num2,&num3) ; //รับค่าตัวเลข 3 ตัว
    //----|ตรวจสอบว่าป้อนข้อมูลถูกต้องหรือไม่
    if(num1 < 0 || num2 < 0 || num3 < 0){
        printf("please enter correct number\n") ;
        return 0 ;
    }//end if
    sum = num1 + num2 + num3 ; //คำนวณผลรวม
    printf("Sum = %d\n",sum) ;
    return 0 ;
}//end main
